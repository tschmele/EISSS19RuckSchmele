<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.PlaceholderFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_display_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNewBackground"
            android:padding="4dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="48dp"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_dispaly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/displayButton_l"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@+id/view_pager_dispaly"
            android:layout_alignBottom="@+id/view_pager_dispaly"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/generate_new"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0.5dp"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_addcircle_white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/displayButton_l2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_above="@+id/displayButton_l"
            android:layout_alignEnd="@+id/view_pager_dispaly"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/generate_new"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0.5dp"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_addcircle_white" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>