    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView_storageEdit_detail_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_textview"
        android:paddingStart="10dp"
        android:text="@string/storage_amount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_storageEdit_detail_category"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView_storageEdit_detail_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_textview"
        android:paddingStart="10dp"
        android:text="@string/storage_desc"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_storageEdit_detail_amount"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/button_storageEdit_detail_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_button_cancel"
        android:text="@android:string/cancel"
        android:textAlignment="center"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toStartOf="@+id/button_storageEdit_detail_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_storageEdit_detail_description" />

    <Button
        android:id="@+id/button_storageEdit_detail_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_button_ok"
        android:text="@android:string/ok"
        android:textAlignment="center"
        android:textColor="#0D6EFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_storageEdit_detail_cancel"
        app:layout_constraintTop_toBottomOf="@+id/textView_storageEdit_detail_description" />


    <ImageView
        android:id="@+id/icon_storage_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/ic_camera_gross"
        app:layout_constraintEnd_toEndOf="@+id/image_storage_view"
        app:layout_constraintTop_toTopOf="@+id/image_storage_view"
        android:contentDescription="@string/camera"/>

    <ImageView
        android:id="@+id/icon_storage_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/ic_upload_gross"
        app:layout_constraintEnd_toStartOf="@+id/icon_storage_camera"
        app:layout_constraintTop_toTopOf="@+id/image_storage_view"
        android:contentDescription="@string/upload" />



</androidx.constraintlayout.widget.ConstraintLayout>