<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.PlaceholderFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_storage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="48dp">
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/storage_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@+id/view_pager"
            android:layout_alignBottom="@+id/view_pager"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/ic_addcircle_white"
            android:text="@string/generate_new"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0.5dp"
            app:maxImageSize="50dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/grocery_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_above="@+id/storage_button"
            android:layout_alignEnd="@+id/view_pager"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:text="@string/generate_new"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0.5dp"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_grocery" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

