<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:background="#00C42D2D">

        <ImageView
            android:id="@+id/imageProfilBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/imageView_profil_background"
            app:srcCompat="@drawable/pic_background_2" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="90dp"
            android:text="@string/textView_name"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageProfilView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/imageView_profil"
            app:srcCompat="@drawable/pic_user" />

        <ImageView
            android:id="@+id/imageView_Pin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="325dp"
            android:layout_marginTop="250dp"
            android:contentDescription="@string/map_pin"
            app:srcCompat="@drawable/ic_pin" />

    </RelativeLayout>
</LinearLayout>